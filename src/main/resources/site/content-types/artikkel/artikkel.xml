                <input name="preface" type="TextArea">
                    <label>Ingress</label>
                    <custom-text>contentdata/preface</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="text" type="HtmlArea">
                    <label>BrÃ¸dtekst</label>
                    <custom-text>contentdata/text</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
        <field-set name="Metadata">
            <label>Metadata</label>
            <items>
                <input name="author" type="TextLine">
                    <label>Forfatter (egendefinert)</label>
                    <custom-text>contentdata/author</custom-text>
                    <help-text>Vil overstyre innholdets forfatternavn</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="created" type="Date">
                    <label>Skrevet dato (egendefinert)</label>
                    <custom-text>contentdata/created</custom-text>
                    <help-text>Vil overstyre innholdets "sist endret"-dato.</help-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
                <input name="anonymous" type="CheckBox">
                    <label>Skjul forfatter/dato</label>
                    <custom-text>contentdata/anonymous</custom-text>
                    <occurrences maximum="1" minimum="0"/>
                </input>
            </items>
        </field-set>
